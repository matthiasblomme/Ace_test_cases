BROKER SCHEMA sharepoint.upload

DECLARE site_name EXTERNAL CHARACTER;
DECLARE library_name EXTERNAL CHARACTER;
DECLARE remote_folder EXTERNAL CHARACTER;
DECLARE remote_file EXTERNAL CHARACTER;
DECLARE tennant_name EXTERNAL CHARACTER;

CREATE COMPUTE MODULE test_HandleTokenReply
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		
		SET Environment.Reply = CAST(InputRoot.BLOB.BLOB AS CHAR CCSID 1208);
		
		SET Environment.Bearer = InputRoot.JSON.Data.access_token;
		
		SET OutputRoot.HTTPRequestHeader."Content-Type" = 'text/plain';
		SET OutputRoot.HTTPRequestHeader."authorization" = 'Bearer ' || Environment.Bearer;
		
		SET OutputLocalEnvironment.Destination.HTTP.RequestURL = 'https://' || tennant_name || '.sharepoint.com/sites/' || site_name || '/' || library_name || 
																'/_api/Web/GetFolderByServerRelativeUrl(''/' || remote_folder || 
																''')/Files/add(url=''' || remote_file  || ''',overwrite=true)'')';
		SET OutputRoot.BLOB.BLOB = CAST('upload file content' AS BLOB CCSID 1208);
		
		RETURN TRUE;
	END;

	CREATE PROCEDURE CopyMessageHeaders() BEGIN
		DECLARE I INTEGER 1;
		DECLARE J INTEGER;
		SET J = CARDINALITY(InputRoot.*[]);
		WHILE I < J DO
			SET OutputRoot.*[I] = InputRoot.*[I];
			SET I = I + 1;
		END WHILE;
	END;

	CREATE PROCEDURE CopyEntireMessage() BEGIN
		SET OutputRoot = InputRoot;
	END;
END MODULE;
